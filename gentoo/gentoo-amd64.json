{
    "variables": {
        "vm_name": "gentoo-amd64",
        "iso_url": "http://distfiles.gentoo.org/releases/amd64/autobuilds/20190804T214502Z/install-amd64-minimal-20190804T214502Z.iso",
        "iso_checksum_type": "sha512",
        "iso_checksum_url": "http://distfiles.gentoo.org/releases/amd64/autobuilds/20190804T214502Z/install-amd64-minimal-20190804T214502Z.iso.DIGESTS",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "ssh_wait_timeout": "6h",
        "disk_size_MB": "8000",
        "ram_MiB": "1024",
        "shutdown_command": "echo 'vagrant' | sudo -S halt -p"
    },
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -ES sh {{.Path}}",
            "scripts": [
                "fix-vagrant-ssh.gentoo.sh",
                "cleanup.gentoo.sh"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "{{ user `vm_name` }}-{{.Provider}}.box",
            "compression_level": "9",
            "vagrantfile_template": "Vagrantfile"
        }
    ],
    "builders": [
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Gentoo_64",
            "vm_name": "{{ user `vm_name` }}",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "iso_checksum_url": "{{ user `iso_checksum_url` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
            "disk_size": "{{ user `disk_size_MB` }}",
            "guest_additions_mode": "disable",
            "virtualbox_version_file": "",
            "vboxmanage": [ ["modifyvm", "{{.Name}}", "--memory", "{{ user `ram_MiB` }}"] ],
            "http_directory": "{{ user `http_directory` }}",
            "boot_command": [
                "gentoo-nofb",
                "<enter><wait10s>",
                "<enter><wait1m>",
                "useradd -m -G users,wheel -s /bin/bash {{ user `ssh_username` }}<enter><wait>",
                "passwd {{ user `ssh_username` }}<enter><wait>",
                "{{ user `ssh_password` }}<enter><wait>",
                "{{ user `ssh_password` }}<enter><wait>",



                "emerge sudo<enter>",



                "<wait20m>",



                "echo '%wheel ALL=(ALL) NOPASSWD: ALL' >>/etc/sudoers<enter><wait>",




                "sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/' /etc/ssh/sshd_config<enter><wait>",
                "/etc/init.d/sshd start<enter>"
            ],
            "shutdown_command": "{{ user `shutdown_command` }}"
        }
    ]
}
