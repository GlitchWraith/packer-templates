{
    "variables": {
        "vm_name": "freedos",
        "iso_url": "http://www.ibiblio.org/pub/micro/pc-stuff/freedos/files/distributions/1.2/FD12CD.iso",
        "iso_checksum_type": "md5",
        "iso_checksum_url": "http://www.ibiblio.org/pub/micro/pc-stuff/freedos/files/distributions/1.2/FD12.md5",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "ssh_wait_timeout": "6h",
        "disk_size_MB": "8000",
        "ram_MiB": "1024",
        "http_directory": "http",
        "shutdown_command": "reboot"
    },
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -ES sh {{.Path}}",
            "scripts": [
                "fix-vagrant-ssh.freedos.bat"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "{{ user `vm_name` }}-{{.Provider}}.box",
            "compression_level": "9",
            "vagrantfile_template": "Vagrantfile"
        }
    ],
    "builders": [
        {
            "type": "virtualbox-iso",
            "guest_os_type": "DOS",
            "vm_name": "{{ user `vm_name` }}",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "iso_checksum_url": "{{ user `iso_checksum_url` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
            "disk_size": "{{ user `disk_size_MB` }}",
            "guest_additions_mode": "disable",
            "virtualbox_version_file": "",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "{{ user `ram_MiB` }}"]
            ],
            "http_directory": "{{ user `http_directory` }}",
            "boot_command": [
                "<tab><wait>",
                "<spacebar>raw<enter><wait10s>",
                "<enter><wait>",
                "<enter><wait>",
                "<up><enter><wait10s>",
                "<enter><wait10s>",
                "<tab><wait>",
                "<spacebar>raw<enter><wait10s>",
                "<enter><wait>",
                "<enter><wait>",
                "<up><enter><wait1m>",
                "<enter><wait>",
                "<enter><wait>",
                "<up><enter><wait1m>",
                "<enter><wait1m>",
                "fdimples<enter><wait>",
                "<down><down><down><down><down><down><wait>",
                "<right><wait>",
                "<down><down><down><wait>",
                "<spacebar><wait>",
                "<tab><tab><wait>",
                "<enter><wait5s>",
                "fdimples<enter><wait>",
                "<down><down><down><down><down><down><wait>",
                "<right><wait>",
                "<down><down><down><down><down><down><down><wait>",
                "<spacebar><wait>",
                "<tab><tab><wait>",
                "<enter><wait5s>",
                "fdimples<enter><wait>",
                "<down><down><down><down><down><down><wait>",
                "<right><wait>",
                "<down><down><down><down><down><down><down><down><down><down><down><down><down><down><down><down><down><down><wait>",
                "<spacebar><wait>",
                "<tab><tab><wait>",
                "<enter><wait5s>",
                "reboot<enter><wait1m>",
                "fdimples<enter><wait>",
                "<down><down><down><down><wait>",
                "<right><wait>",
                "<down><down><down><down><down><down><down><down><down><wait>",
                "<spacebar><wait>",
                "<tab><tab><wait>",
                "<enter><wait5s>",
                "wget http://www.rahul.net/dkaufman/noise063a2.zip<enter><wait5s>",
                "unzip noise063a2.zip<enter><wait>",
                "echo device=c:\\noise\\noise386.sys>>c:\\fdconfig.sys<enter><wait>",
                "del noise063a2.zip<enter><wait>",
                "reboot<enter><wait1m>",
                "wget http://www.bttr-software.de/products/jhoffmann/rmenu-17.zip<enter><wait5s>",
                "unzip -d rmenu rmenu_17.zip<enter><wait>",
                "del rmenu_17.zip<enter><wait>",
                "mkdir c:\\vagrant<enter><wait>",
                "touch c:\\mtcp\\ftpsrv.log<enter><wait>",
                "echo {{ user `ssh_username` }} {{ user `ssh_password` }} /drive_c/vagrant [any] all>c:\\mtcp\\ftppass.txt<enter><wait>",
                "echo ftpsrv_password_file c:\\mtcp\\ftppass.txt>c:\\mtcp\\leader.cfg<enter><wait>",
                "echo ftpsrv_log_file c:\\mtcp\\ftpsrv.log>>c:\\mtcp\\leader.cfg<enter><wait>",
                "echo ftpsrv_exclude_drives ab>>c:\\mtcp\\leader.cfg<enter><wait>",
                "type c:\\mtcp\\leader.cfg c:\\fdos\\mtcp.cfg>c:\\mtcp\\mtcp.cfg<enter><wait>",
                "move /y c:\\mtcp\\mtcp.cfg c:\\fdos\\mtcp.cfg<enter><wait>",
                "del c:\\mtcp\\leader.cfg<enter><wait>",
                "echo set PATH=%%PATH%%;c:\\mtcp;c:\\rmenu>>c:\\autoexec.bat<enter><wait>",
                "echo rmenu /m6!>>c:\\autoexec.bat<enter><wait>",
                "reboot<enter>"
            ],
            "shutdown_command": "{{ user `shutdown_command` }}"
        }
    ]
}
